# Environment Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/blood-donation-management
MONGODB_ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/blood-donation-management

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# Password Hashing
BCRYPT_ROUNDS=12

# WhatsApp Business API Configuration
WHATSAPP_TOKEN=your-whatsapp-business-api-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_WEBHOOK_SECRET=your-webhook-secret

# Twilio SMS Configuration (Fallback)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid Email Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@callforblood.org
SENDGRID_FROM_NAME=Call For Blood Foundation

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Security Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Redis Configuration (Optional - for production caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Google Maps API (Optional - for enhanced location services)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Notification Configuration
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=5000
NOTIFICATION_BATCH_SIZE=10

# Emergency Response Configuration
EMERGENCY_ESCALATION_DELAY=1200000
MAX_SEARCH_RADIUS=100
RADIUS_INCREMENT=10

# Admin Configuration
ADMIN_EMAIL=admin@callforblood.org
ADMIN_PHONE=+919876543210
SUPPORT_EMAIL=support@callforblood.org
SUPPORT_PHONE=+91-911-BLOOD

# Application URLs
CLIENT_URL=http://localhost:3000
SERVER_URL=http://localhost:5000
API_BASE_URL=http://localhost:5000/api/v1

# Monitoring and Analytics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90
PERFORMANCE_MONITORING=true

# Development Configuration
DEBUG=blood-donation:*
MOCK_EXTERNAL_SERVICES=false
SEED_DATABASE=false

# Production Configuration (Override in production)
# NODE_ENV=production
# MONGODB_URI=your-production-mongodb-uri
# CLIENT_URL=https://callforblood.org
# SERVER_URL=https://api.callforblood.org
# LOG_LEVEL=warn
# MOCK_EXTERNAL_SERVICES=false